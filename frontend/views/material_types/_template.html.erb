<% define_template("material_type", jsonmodel_definition(:material_types)) do |form| %>
  <% material_type_form_field = lambda do |name, value| %>
    <div class="form-group">
      <div class="col-sm-1 checkbox">
        <%= form.checkbox name, {:plugin => true}, value %>
      </div>
      <%= form.label name, {:plugin => true, :style => "text-align: left;"}, ["col-sm-10"] %>
    </div>
  <% end %>

  <div class="subrecord-form-fields">
    <div class="row" style="clear: both">
      <div class="col-md-6">
        <% material_type_form_field.call("paper", user_prefs["material_type_paper"]) %>
        <% material_type_form_field.call("audiovisual_materials", user_prefs["material_type_audiovisual_materials"]) %>
        <% material_type_form_field.call("objects", user_prefs["material_type_objects"]) %>
        <% material_type_form_field.call("born_digital", user_prefs["material_type_born_digital"]) %>
      </div>
    </div>
   </div>
<% end %>
